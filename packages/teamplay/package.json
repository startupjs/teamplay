{
  "name": "teamplay",
  "version": "0.1.10",
  "description": "Full-stack signals ORM with multiplayer",
  "type": "module",
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./connect": "./connect/index.js",
    "./server": "./server.js",
    "./connect-test": "./connect/test.js",
    "./cache": "./cache.js",
    "./schema": "./schema.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "npm run test-server && npm run test-client",
    "test-server": "node --expose-gc -r ./test/_init.cjs --test",
    "test-server-only": "node --expose-gc -r ./test/_init.cjs --test --test-only",
    "test-client": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest"
  },
  "dependencies": {
    "@nx-js/observer-util": "^4.1.3",
    "@teamplay/backend": "^0.1.10",
    "@teamplay/cache": "^0.1.10",
    "@teamplay/channel": "^0.1.10",
    "@teamplay/debug": "^0.1.10",
    "@teamplay/schema": "^0.1.10",
    "@teamplay/utils": "^0.1.10",
    "diff-match-patch": "^1.0.5",
    "events": "^3.3.0",
    "json0-ot-diff": "^1.1.2",
    "lodash": "^4.17.20",
    "sharedb": "^5.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@testing-library/react": "^15.0.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharedb-mingo-memory": "^3.0.1"
  },
  "peerDependencies": {
    "react": "*",
    "sharedb-mingo-memory": "*"
  },
  "peerDependenciesMeta": {
    "sharedb-mingo-memory": {
      "optional": true
    }
  },
  "jest": {
    "transform": {},
    "testEnvironment": "jsdom",
    "testRegex": "test_client/.*\\.jsx?$",
    "testPathIgnorePatterns": [
      "node_modules",
      "<rootDir>/test_client/helpers"
    ]
  },
  "license": "MIT"
}
