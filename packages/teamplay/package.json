{
  "name": "teamplay",
  "version": "0.3.24",
  "description": "Full-stack signals ORM with multiplayer",
  "type": "module",
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./connect": "./connect/index.js",
    "./server": "./server.js",
    "./connect-test": "./connect/test.js",
    "./cache": "./cache.js",
    "./schema": "./schema.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "npm run test-server && npm run test-client",
    "test-server": "node --expose-gc -r ./test/_init.cjs --test",
    "test-server-only": "node --expose-gc -r ./test/_init.cjs --test --test-only",
    "test-client": "node --expose-gc --experimental-vm-modules ../../node_modules/.bin/jest"
  },
  "dependencies": {
    "@nx-js/observer-util": "^4.1.3",
    "@teamplay/backend": "^0.3.24",
    "@teamplay/cache": "^0.3.24",
    "@teamplay/channel": "^0.3.24",
    "@teamplay/debug": "^0.3.24",
    "@teamplay/schema": "^0.3.24",
    "@teamplay/utils": "^0.3.24",
    "diff-match-patch": "^1.0.5",
    "events": "^3.3.0",
    "json0-ot-diff": "^1.1.2",
    "lodash": "^4.17.20",
    "sharedb": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.27.3",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@jest/globals": "^29.7.0",
    "@startupjs/sharedb-mingo-memory": "^4.0.0-1",
    "@testing-library/react": "^15.0.7",
    "babel-jest": "^30.0.0-beta.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "peerDependencies": {
    "@startupjs/sharedb-mingo-memory": "*",
    "react": "*"
  },
  "peerDependenciesMeta": {
    "@startupjs/sharedb-mingo-memory": {
      "optional": true
    }
  },
  "jest": {
    "transform": {
      "^.+\\.(js|jsx|mjs|cjs)$": "babel-jest"
    },
    "testEnvironment": "jsdom",
    "testRegex": "test_client/.*\\.jsx?$",
    "testPathIgnorePatterns": [
      "node_modules",
      "<rootDir>/test_client/helpers"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!@startupjs/sharedb-mingo-memory/).*/",
      "\\.pnp\\.[^\\/]+$"
    ],
    "moduleNameMapper": {
      "^mingo$": "<rootDir>/../../node_modules/mingo/dist/cjs/index.js"
    }
  },
  "license": "MIT"
}
